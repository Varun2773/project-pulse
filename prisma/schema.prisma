generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Service {
  id            String   @id @default(uuid())
  base_url      String
  health_path   String   @default("/health")
  alert_email   String
  check_interval Int      @default(5) // in minutes
  last_status   String   @default("unknown") // healthy, degraded, unhealthy
  last_checked_at DateTime?
  last_alert_sent_at DateTime?
  webhookUrl    String?
  created_at    DateTime @default(now())
  incidents     Incident[]
  user          User     @relation(fields: [userId], references: [id])
  userId        String
}

model Incident {
  id          String   @id @default(uuid())
  service     Service  @relation(fields: [service_id], references: [id])
  service_id  String
  status      String   // healthy, degraded, unhealthy
  reason      String
  error_code  String?
  suggestion  String?
  latency     Int?
  timestamp   DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  services  Service[]
}
